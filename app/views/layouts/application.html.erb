<!DOCTYPE html>
<html>
  <head>
    <title>Super-Heroic Flix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
  <nav>
    <%= image_tag("logo") %>
    <ul class="left">
      <li>
      <%= link_to("All Movies", movies_url) %>
      </li>
    </ul>
    <ul class="right">
      <% if user_login %>
        <li>
          <%= link_to user_login.name, user_login %>
        </li>
        <li>
          <%= link_to "Sign out", session_path, method: :delete, class: "button" %>
        </li>
      <% else %>
        <li>
          <%= link_to "Sign In", new_session_path, class: "button" %>
          <%= link_to "Sign Up", signup_path, class: "button" %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
  
    <div class="content">
      <%= render "layouts/flash" %>
      <%= yield %>
    </div>

    <footer>
      <p>
          Copyright &copy; <%= Time.now.year %>
          <%= link_to 'The Pragmatic Studio','https://pragmaticstudio.com' %>
      </p>
    </footer>
  </body>
</html>
