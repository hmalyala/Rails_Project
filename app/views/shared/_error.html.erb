<% if object.errors.any? %>
    <section class="errors">
    <h2> Oops! The form could not be saved.
    </h2>
    <p> Please correct <%= pluralize(object.errors.size, "error") %> </p>
    <ul>
        <% object.errors.full_messages.each do |error| %>
            <li> <%= error %> </li>
        <% end %>
    </ul>
    </section>
<% end %>